source :rubygems

# serving
gem "thin"
gem "rack_csrf"
gem "rack-ssl-enforcer"
gem "sinatra"
gem "sinatra-flash"
gem "slim"
gem "redcarpet"
gem "builder", "~> 3.0.0"

# requesting
gem "faraday"
gem "faraday_middleware"
gem "omniauth"
gem "omniauth-appdotnet"

# storing
gem "curator", :git => "git://github.com/braintree/curator.git"
gem "mongo", "1.6.0"
gem "bson_ext", "1.6.0"

# etc
gem "oj"
gem "fastimage"
gem "rufus-scheduler"


group :development, :test do
  gem "rspec"
  gem "rack-test"
  gem "timecop"
  gem "shotgun"
end
